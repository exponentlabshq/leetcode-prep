{
  "manifest_version": 3,
  "name": "LeetCode Pattern Hints",
  "version": "1.0.0",
  "description": "Provides instant LeetCode pattern hints and algorithm suggestions on keyword hover",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://leetcode.com/*",
    "https://*.leetcode.com/*",
    "https://leetcode.cn/*",
    "https://*.leetcode.cn/*",
    "https://hackerrank.com/*",
    "https://*.hackerrank.com/*",
    "https://codeforces.com/*",
    "https://*.codeforces.com/*",
    "https://atcoder.jp/*",
    "https://*.atcoder.jp/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://leetcode.com/*",
        "https://*.leetcode.com/*",
        "https://leetcode.cn/*",
        "https://*.leetcode.cn/*",
        "https://hackerrank.com/*",
        "https://*.hackerrank.com/*",
        "https://codeforces.com/*",
        "https://*.codeforces.com/*",
        "https://atcoder.jp/*",
        "https://*.atcoder.jp/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LeetCode Pattern Hints"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["hint-popup.html", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
